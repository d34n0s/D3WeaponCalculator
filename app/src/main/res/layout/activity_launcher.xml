<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LauncherActivity">


    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="99">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="25"
            android:padding="20sp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Weapon Calculator"
                android:textSize="20sp"
                style="@style/button"
                android:id="@+id/b_ls_weaponCalc"
                android:onClick="b_ls_weaponCalc"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="25"
            android:padding="20sp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Armory"
                android:textSize="20sp"
                style="@style/button"
                android:id="@+id/b_ls_armory"
                android:onClick="b_ls_armory"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="25"
            android:padding="20sp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Legendary Gem Calculator"
                android:textSize="20sp"
                style="@style/button"
                android:id="@+id/b_ls_legendary_gem_calculator"
                android:onClick="b_ls_legendary_gem_calculator"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="25"
            android:padding="20sp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Breakpoint Calculator"
                android:textSize="20sp"
                style="@style/button"
                android:id="@+id/b_ls_breakpointCalculator"
                android:onClick="b_ls_breakpointCalculator"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
