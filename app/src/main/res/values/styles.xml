<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primaryColor_500</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primaryDarkColor_700</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accentLightColor_100</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="heading">
        <item name="android:textColor">@color/primaryColor_500</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/primaryColor_500</item>
    </style>

</resources>
